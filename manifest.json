{
	"name": "django2ynh",
	"id": "django2ynh",
	"packaging_format": 1,
	"description": {
		"en": "Glue code to package django projects as yunohost apps."
	},
	"version": "0.2.0rc0~ynh1",
	"url": "https://pypi.org/project/django2ynh/",
	"license": "GPL-3.0",
	"maintainer": {
		"name": "Jens Diemer",
		"email": "django2ynh@jensdiemer.de"
	},
	"previous_maintainers": [],
	"requirements": {
		"yunohost": ">= 4.0"
	},
	"multi_instance": true,
	"services": [
		"nginx"
	],
	"arguments": {
		"install" : [
			{
				"name": "domain",
				"type": "domain",
				"ask": {
					"en": "Choose a domain for django2ynh",
					"fr": "Choisissez un domaine pour django2ynh"
				},
				"example": "domain.org"
			},
			{
				"name": "path",
				"type": "path",
				"ask": {
				    "en": "Choose a path for django2ynh",
				    "fr": "Choisissez un chemin pour django2ynh"
				},
				"example": "/django2ynh",
				"default": "/django2ynh"
			},
			{
				"name": "admin",
				"type": "user",
				"ask": {
				    "en": "Choose an admin user for django2ynh",
				    "fr": "Choisissez l'administrateur pour django2ynh"
				},
				"example": "johndoe"
			},
			{
				"name": "is_public",
				"type": "boolean",
				"ask": {
					"en": "Should django2ynh be public accessible?",
					"fr": "django2ynh doit-il être accessible au public ?"
				},
				"help": {
					"en": "Any YunoHost user and anonymous people from the web will be able to access the application",
					"fr": "Tout utilisateur YunoHost et les personnes anonymes pourront accéder à l'application"
				},
				"default": false
			}
		]
	}
}
